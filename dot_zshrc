
. "$HOME/.local/bin/env"
. "$HOME/.cargo/env"

[[ -d ~/.rbenv  ]] && \
  export PATH=${HOME}/.rbenv/bin:${PATH} && \
  eval "$(rbenv init -)"

alias vi="nvim"
alias vim="nvim"
alias view="nvim -R"

alias crsync="chezmoi git pull"
alias capply="chezmoi apply"
alias cdiff="chezmoi diff"

# moonbit
export PATH="$HOME/.moon/bin:$PATH"

eval "$($(which mise) activate zsh)" # miseの有効化

source ~/.zshrc.local